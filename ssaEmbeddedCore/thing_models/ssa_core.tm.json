{
    "@context": [
        "https://www.w3.org/2022/wot/td/v1.1"
    ],
    "@type": "tm:ThingModel",
    "title": "ssa_core",
    "version": {
        "model": "0.1.0"
    },
    "id": "urn:uuid:{{THING_UUID_V4}}",
    "description": "SSA Core Thing Model. Models the functionality common to all Smart Sensor Actuator Runtimes.",
    "securityDefinitions": {
        "nosec_sc": {
            "scheme": "nosec"
        }
    },
    "security": "nosec_sc",
    "properties": {
        "coreStatus": {
            "title": "Core Status",
            "description": "Status of the SSA Core.",
            "readOnly": true,
            "writeOnly": false,
            "enum": [
                "idle",
                "error",
                "healthy"
            ]
        }
    },
    "actions": {
        "ssaVFSListAction": {
            "title": "SSA VFS List Action",
            "description": "List the contents of a directory in the Virtual File System.",
            "safe": true,
            "idempotent": false,
            "input": {
                "type": "object",
                "properties": {
                    "dir": {
                        "title": "Directory",
                        "description": "Directory to list.",
                        "type": "string"
                    },
                    "recursive": {
                        "title": "Recursive",
                        "description": "List contents recursively.",
                        "type": "boolean"
                    }
                },
                "required": [
                    "dir"
                ]
            }
        },
        "ssaVFSReadAction": {
            "title": "SSA VFS Read Action",
            "description": "Read the contents of a file in the Virtual File System.",
            "safe": true,
            "idempotent": false,
            "input": {
                "type": "string",
                "title": "File",
                "description": "File to read."
            }
        },
        "ssaVFSWriteAction": {
            "title": "SSA VFS Write Action",
            "description": "Write to a file in the Virtual File System.",
            "safe": false,
            "idempotent": false,
            "input": {
                "type": "object",
                "properties": {
                    "path": {
                        "title": "File path",
                        "description": "File to write.",
                        "type": "string"
                    },
                    "payload": {
                        "type": "object",
                        "description": "Payload to write to the file verified with a hash.",
                        "properties": {
                            "data": {
                                "type": "string",
                                "title": "Data",
                                "description": "Data to write."
                            },
                            "hash": {
                                "type": "string",
                                "title": "Hash",
                                "description": "Hash of the data to write."
                            },
                            "algo": {
                                "type": "string",
                                "title": "Algorithm",
                                "description": "Hash algorithm used to generate the hash."
                            }
                        }
                    },
                    "append": {
                        "title": "Append",
                        "description": "Append to the file. If false, the file is overwritten.",
                        "type": "boolean"
                    }
                },
                "required": [
                    "file",
                    "payload"
                ]
            }
        },
        "ssaVFSDeleteAction": {
            "title": "SSA VFS Delete Action",
            "description": "Delete a file or directory in the Virtual File System.",
            "safe": false,
            "idempotent": false,
            "input": {
                "type": "object",
                "description": "File or directory to delete.",
                "properties": {
                    "path": {
                        "title": "Path",
                        "description": "Path to delete.",
                        "type": "string"
                    },
                    "recursive": {
                        "title": "Recursive",
                        "description": "Delete contents recursively.",
                        "type": "boolean"
                    }
                },
                "required": [
                    "path"
                ]
            }
        },
        "ssaCoreReload": {
            "title": "SSA Core Reload",
            "description": "Force a reload the SSA Core firmware.",
            "safe": false,
            "idempotent": false
        },
        "ssaCoreSetProperty": {
            "input": {
                "properties": {
                    "property": {
                        "type": "string",
                        "title": "Property",
                        "description": "Property to set."
                    },
                    "value": {
                        "title": "Value",
                        "description": "Value to set the property to.",
                        "oneof": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "boolean"
                            },
                            {
                                "type": "integer"
                            },
                            {
                                "type": "number"
                            },
                            {
                                "type": "object"
                            },
                            {
                                "type": "array"
                            }
                        ]
                    }
                },
                "required": [
                    "property",
                    "value"
                ]
            }
        }
    }
}
