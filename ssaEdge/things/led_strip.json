{
    "@context": "https://www.w3.org/2022/wot/td/v1.1",
    "@type": "tm:ThingModel",
    "title": "simple_example",
    "description": "Example thing with example affordances implemented with the Smart Sensor Actuator HAL to serve as a demo to the SSA framework",
    "version": {
        "model": "0.0.1"
    },

    "links": [{
        "rel": "tm:extends",
        "href": "http://10.241.179.95:8080/models/base_ssa_thing",
        "type": "application/tm+json"
    }],

    "properties": {
        "led_strip": {
            "type": "array",
            "description": "a strip of addressable rgb LEDs",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "brightness": {
                        "description": "brightness value of the LED",
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                    },
                    "color": {
                        "description": "24bit hexadecimal number",
                        "type": "string",
                        "pattern": "0[x][0-9A-F]{1,6}",
                        "minLength": 3,
                        "maxLength": 8
                    },
                    "is_on": {
                        "type": "boolean",
                        "default": false
                    }
                }
            }
        }
    },

    "actions": {
        "toggle_strip": {
            "description": "Toggle all leds in the strip",
            "idempotent": true,
            "uriVariables": {
                "state":{
                    "type": "string",
                    "enum": ["on", "off"]
                }
            },
            "synchronous": true,
            "forms": [{
                "href": "mqtt://{{MQTT_BROKER_ADDR}}",
                "mqv:topic": "{{THING_MODEL}}/{{THING_UUID_V4}}/actions/led_strip/toggle/{state}",
                "op": "invokeaction",
                "mqv:qos": "1",
                "mqv:retain": false,
                "contentType": "application/json"
            }]
        },
        "set_strip_brigtness": {
            "description": "Set the brightness of all leds in the strip",
            "idempotent": true,
            "synchronous": true,
            "uriVariables": {
                "brightness":{
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100
                }
            },
            "forms": [{
                "href": "mqtt://{{MQTT_BROKER_ADDR}}",
                "mqv:topic": "{{THING_MODEL}}/{{THING_UUID_V4}}/actions/led_strip/set_brightness/{brightness}",
                "op": "invokeaction",
                "mqv:qos": "1",
                "mqv:retain": false,
                "contentType": "application/json"
            }]
        },

        "set_strip_color":{
            "description": "Set the color of all leds in the strip",
            "idempotent": true,
            "synchronous": true,
            "uriVariables": {
                "color":{
                    "type": "string",
                    "pattern": "0[x][0-9A-F]{1,6}",
                    "minLength": 3,
                    "maxLength": 8
                }
            },
            "forms": [{
                "href": "mqtt://{{MQTT_BROKER_ADDR}}",
                "mqv:topic": "{{THING_MODEL}}/{{THING_UUID_V4}}/actions/led_strip/set_color/{color}",
                "op": "invokeaction",
                "mqv:qos": "1",
                "mqv:retain": false,
                "contentType": "application/json"
            }]
        },

        "toggle_led": {
            "description": "Toggle a single led in the strip",
            "idempotent": true,
            "synchronous": true,
            "uriVariables": {
                "led_index":{
                    "type": "number",
                    "minimum": 0
                },
                "state":{
                    "type": "string",
                    "enum": ["on", "off"]
                }
            },
            "forms": [{
                "href": "mqtt://{{MQTT_BROKER_ADDR}}",
                "mqv:topic": "{{THING_MODEL}}/{{THING_UUID_V4}}/actions/led_strip/{led_index}/toggle/{state}",
                "op": "invokeaction",
                "mqv:qos": "1",
                "mqv:retain": false,
                "contentType": "application/json"
            }]
        },

        "set_led_brightness": {
            "description": "Set the brightness of a single led in the strip",
            "idempotent": true,
            "synchronous": true,
            "uriVariables": {
                "led_index":{
                    "type": "number",
                    "minimum": 0
                },
                "brightness":{
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100
                }
            },
            "forms": [{
                "href": "mqtt://{{MQTT_BROKER_ADDR}}",
                "mqv:topic": "{{THING_MODEL}}/{{THING_UUID_V4}}/actions/led_strip/{led_index}/set_brightness/{brightness}",
                "op": "invokeaction",
                "mqv:qos": "1",
                "mqv:retain": false,
                "contentType": "application/json"
            }]
        },

        "set_led_color": {
            "description": "Set the color of a single led in the strip",
            "idempotent": true,
            "synchronous": true,
            "uriVariables": {
                "led_index":{
                    "type": "number",
                    "minimum": 0
                },
                "color":{
                    "type": "string",
                    "pattern": "0[x][0-9A-F]{1,6}",
                    "minLength": 3,
                    "maxLength": 8
                }
            },
            "forms": [{
                "href": "mqtt://{{MQTT_BROKER_ADDR}}",
                "mqv:topic": "{{THING_MODEL}}/{{THING_UUID_V4}}/actions/led_strip/{led_index}/set_color/{color}",
                "op": "invokeaction",
                "mqv:qos": "1",
                "mqv:retain": false,
                "contentType": "application/json"
            }]
        }
    }
}
